<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0">
  <info>
    <title>APA 7 Português com "e"</title>
    <id>http://www.zotero.org/styles/apa-7-portugues-e</id>
    <link href="http://www.zotero.org/styles/apa-7-portugues-e" rel="self"/>
    <author>
      <name>Adaptado por ChatGPT</name>
    </author>
    <category citation-format="author-date"/>
    <summary>Estilo APA 7 em português substituindo "&" por "e" em citações dentro do texto.</summary>
    <updated>2025-05-12T00:00:00+00:00</updated>
  </info>
  <locale xml:lang="pt-BR">
    <terms>
      <term name="et-al">et al.</term>
      <term name="and">e</term>
      <term name="and others">e outros</term>
    </terms>
  </locale>
  <citation>
    <layout prefix="" suffix="." delimiter="; ">
      <group delimiter=", ">
        <names variable="author">
          <name and="text" delimiter=", " initialize-with=". " name-as-sort-order="first"/>
          <label form="long" prefix=" (" suffix=")" text-case="lowercase"/>
        </names>
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </group>
    </layout>
  </citation>
  <bibliography>
    <layout suffix=".">
      <text variable="title"/>
      <text variable="container-title" prefix=". "/>
      <text variable="publisher" prefix=". "/>
      <date variable="issued" prefix=". "/>
    </layout>
  </bibliography>
</style>
